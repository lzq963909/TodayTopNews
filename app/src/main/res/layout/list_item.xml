<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_one_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/item_one_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="习近平十个比喻描绘“一带一路”蓝图"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/item_one_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="置顶" />

                <TextView
                    android:id="@+id/item_one_media_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  央视新闻网"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_one_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  评论"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_two_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/item_two_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="习近平十个比喻描绘“一带一路”蓝图"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/item_two_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="置顶" />

                <TextView
                    android:id="@+id/item_two_media_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  央视新闻网"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_two_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  评论"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/item_two_middle_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_three_layout"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/item_three_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="习近平十个比喻描绘“一带一路”蓝图"
            android:textSize="18sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_three_image01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/item_three_image02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/item_three_image03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="5dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_three_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="置顶"
                />
            <TextView
                android:id="@+id/item_three_media_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="  央视新闻网"
                />
            <TextView
                android:id="@+id/item_three_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="  评论"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:padding="10dp"
        android:id="@+id/item_four_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_four_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="习近平十个比喻描绘“一带一路”蓝图"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/item_four_middle_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/item_four_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="置顶" />

            <TextView
                android:id="@+id/item_four_media_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  央视新闻网"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_four_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  评论"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>