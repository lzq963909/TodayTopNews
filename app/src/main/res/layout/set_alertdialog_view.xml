<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/foot_big_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="小"
                android:textColor="#000000"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/radiobutton_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp" />
        </LinearLayout>

        <include layout="@layout/view_"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="中"
                android:textColor="#000000"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/radiobutton_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:checked="true" />
        </LinearLayout>

        <include layout="@layout/view_"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="大"
                android:textColor="#000000"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/radiobutton_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp" />
        </LinearLayout>

        <include layout="@layout/view_"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="特大"
                android:textColor="#000000"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/radiobutton_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp" />
        </LinearLayout>

        <include layout="@layout/view_"></include>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/form_commant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="不显示"
                android:textColor="#000000"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/form_no_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp" />
        </LinearLayout>

        <include layout="@layout/view_"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="只显示好友"
                android:textColor="#000000"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/form_only_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginRight="20dp" />
        </LinearLayout>

        <include layout="@layout/view_"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="不限"
                android:textColor="#000000"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/from_no_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:checked="true" />
        </LinearLayout>

        <include layout="@layout/view_"></include>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/no_wlan_networkflow"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="最佳效果(下载大图)"
                android:textColor="#000000"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/download_big_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp" />
        </LinearLayout>

        <include layout="@layout/view_"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="较省流量(智能下图)"
                android:textColor="#000000"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/capacity_download_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginRight="20dp" />
        </LinearLayout>

        <include layout="@layout/view_"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="极省流量(不下载图)"
                android:textColor="#000000"
                android:textSize="30sp" />

            <RadioButton
                android:id="@+id/bo_download_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:checked="true" />
        </LinearLayout>

        <include layout="@layout/view_"></include>
    </LinearLayout>

    <TextView
        android:id="@+id/clear_save"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定要删除所有缓存吗?"
        android:textSize="30sp"
        android:layout_marginLeft="20sp"
        android:textColor="#000000"/>

</LinearLayout>